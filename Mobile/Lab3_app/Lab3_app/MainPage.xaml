<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab3_app.MainPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             ios:Page.UseSafeArea="true">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="imgPhoto" />
        <StackLayout Grid.Row="1" Padding="20">
            <Button x:Name="btnCamera" Text="Take a Photo" Padding="20"/>
            <Entry x:Name="entFirstName" Placeholder="First name"/>
            <Entry x:Name="entLastName" Placeholder="Last name" />
            <Entry x:Name="entPhoneNumber" Placeholder="Phone number" Keyboard="Text" />
        </StackLayout>
        <StackLayout Grid.Row="2" VerticalOptions="EndAndExpand">
            <Button x:Name="btnSave" Text="Save data" />
        </StackLayout>
    </Grid>

</ContentPage>
