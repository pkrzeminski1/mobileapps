@model string
@{
    ViewData["Title"] = "Chat";
}

<input hidden value="@Model" id="userName"/>
<div class="row">
    <div class="col-10">
        <input id="txtMessage" class="form-control" placeholder="Enter your message"/>
    </div>
    <div class="col-2">
        <button id="btnSend" disabled class="btn btn-outline-primary">SendMessage</button>
    </div>
    <hr class="col-12 py-3">
    <div class="col-12">
        <ul id="listMessages">
            
        </ul>
    </div>
</div>

@section Scripts{
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}